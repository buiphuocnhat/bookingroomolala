<div class="row">
    <div class="col-md-7 banner">
        <h1><span class="text-red">Olala</span> Book unique homes and experience a city like a local.</h1>
    </div>
</div>
<%= form_tag search_path, method: :get do %>
    <div class="row">
        <div class="col-md-6">
            <%= text_field_tag :search, params[:search], placeholder: "Where are you going?", class: "form-control", id:"autolocation"%>
        </div>
        <div class="col-md-3">
            <%= text_field_tag :start_date, params[:start_date], placeholder: "Start Date", class: "form-control datepicker"%>
        </div>
        <div class="col-md-3">
            <%= text_field_tag :end_date, params[:end_date], placeholder: "End Date", class: "form-control datepicker"%>
        </div>
    </div>

    <br/><br/>

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <%= submit_tag "Search", class: "btn btn-normal btn-block"%>
        </div>
    </div>

<% end %>
<br /><hr /><br />

<!-- HOMES -->
<div><h3>Homes</h3></div>
<br />

<div class="row">
    <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms}  %>
</div>

<!-- CITIES -->
<div><h3>Cities</h3></div>
<br />

<div class="row">
    <div class="col-md-3 col-sm-12">
        <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=da+nang">
            <div class="discovery-card" style="background-image: url('assets/danang.jpg')"></div>
            <h1>DA NANG</h1>
        </a>
    </div>
    <div class="col-md-3 col-sm-12">
        <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=ha+noi">
            <div class="discovery-card" style="background-image: url('assets/hanoi.jpg')"></div>
            <h1>HA NOI</h1>
        </a>
    </div>
    <div class="col-md-3 col-sm-12">
        <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=ho+chi+minh">
            <div class="discovery-card" style="background-image: url('assets/tphcm.jpg')"></div>
            <h1>TP HO CHI MINH</h1>
        </a>
    </div>
    <div class="col-md-3 col-sm-12">
        <a href="http://localhost:3000/search?utf8=%E2%9C%93&search=hue">
            <div class="discovery-card" style="background-image: url('assets/hue.jpg')"></div>
            <h1>HUE</h1>
        </a>
    </div>
</div>

<script>
    $('#start_date').datepicker({
        dateFormat: 'dd-mm-yy',
        minDate: 0,
        maxDate: '3m',
        onSelect: function(selected) {
            $('#end_date').datepicker("option", "minDate", selected);
            $('#end_date').attr("disabled", false);
        }
    });

    $('#end_date').datepicker({
        dateFormat: 'dd-mm-yy',
        minDate: 0,
        maxDate: '3m',
        onSelect: function(selected) {
            $('#start_date').datepicker("option", "maxDate", selected);
        }
    });

    $(function() {
        $("#autolocation").geocomplete();
    });
</script>
